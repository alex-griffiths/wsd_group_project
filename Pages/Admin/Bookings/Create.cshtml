@page
@model Three_Sisters_Hotel.Pages.Admin.Bookings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Booking.RoomID" class="control-label"></label>
                <select asp-for="Booking.RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.CustomerEmail" class="control-label"></label>
                <select asp-for="Booking.CustomerEmail" class="form-control" asp-items="ViewBag.CustomerFullName"></select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.CheckIn" class="control-label"></label>
                <input asp-for="Booking.CheckIn" class="form-control" />
                <span asp-validation-for="Booking.CheckIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.CheckOut" class="control-label"></label>
                <input asp-for="Booking.CheckOut" class="form-control" />
                <span asp-validation-for="Booking.CheckOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.Cost" class="control-label"></label>
                <input asp-for="Booking.Cost" class="form-control" />
                <span asp-validation-for="Booking.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if ((string)ViewData["NewBooking"] == "true")
{
    <div class="col-md-8">
        <h2>Your Booking has been Placed!</h2>
        <p><strong>Room No: </strong>@ViewData["Room"]</p>
        <p><strong>Nights: </strong>@ViewData["Nights"]</p>
        <p><strong>Beds: </strong>@ViewData["BedCount"]</p>
        <p><strong>Total Cost: $</strong>@ViewData["total"]</p>
    </div>
}
else if ((string)ViewData["NewBooking"] == "false")
{
    <div class="col-md-8">
        <h2>Your Booking could not be Placed</h2>
        <p>Unfortunately, this room is unavailable for the selected dates.</p>
    </div>
}


<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
